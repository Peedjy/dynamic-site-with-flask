
 <!-- contact section -->

<section class="contact_section">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-4 offset-lg-2 col-md-5 offset-md-1">
        <h2 class="custom_heading">Contact Us</h2>
        <form action="{{ url_for('contact') }}" method="post">
          {{ form.hidden_tag() }}
          
          <div>
          {{ form.name.label }}
            <input type="text" placeholder="Name" name="name" value="{{ form.name.data or ''}}">  <!-- The or operator is used to check if form.phone.data is None and, if so, uses an empty string instead. -->
            {% if form.errors['name'] %}
              <p class="error">{{ form.errors['name'][0] }}</p>
            {% endif %}
          </div>

          <div>
          {{ form.email.label }}
            <input type="email" placeholder="Email" name="email" value="{{ form.email.data or '' }}">
            {% if form.errors['email'] %}
              <p class="error">{{ form.errors['email'][0] }}</p>
            {% endif %}
          </div> 

          <div>
          {{ form.phone.label }}
            <input type="text" placeholder="Phone Number" name="phone" value="{{ form.phone.data or '' }}">
            {% if form.errors['phone'] %}
              <p class="error">{{ form.errors['phone'][0] }}</p>
            {% endif %}
          </div>


          <div>
            {{ form.message.label }}
            {{ form.message(class="form-control message-box", placeholder="Message" or '') }}
          </div>
          <div class="d-flex mt-4">
            <button type="submit" class="btn btn-primary">
              SEND
            </button>
          </div>
        </form>
      </div>
      <div class="col-md-6 px-0">
        <div class="img-box">
          <img src="{{ url_for('static', filename='images/contact.jpg') }}" alt="" class="w-100" />
        </div>
      </div>
    </div>
  </div>
</section>

  <!-- end contact section -->
